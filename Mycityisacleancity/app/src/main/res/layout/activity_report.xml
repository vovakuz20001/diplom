<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReportActivity">

    <Button
        android:id="@+id/button_scores_rep"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_gravity="end"
        android:backgroundTint="#3B945E"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="13sp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:text="0" />

    <ImageView
        android:id="@+id/imageViewReport"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginTop="15dp"
        android:maxHeight="100dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/add" />

    <EditText
        android:id="@+id/report_address"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:textColorHint="#000000"
        android:layout_marginTop="70dp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:hint="Введите адрес" />

    <EditText
        android:id="@+id/report_desc"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:textColorHint="#000000"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:hint="Опишите проблему" />

    <Button
        android:id="@+id/btn_sendReport"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:layout_width="350dp"
        android:backgroundTint="#FFCC00"
        app:cornerRadius="12dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="Отправить" />

    <TextView
        android:id="@+id/name_textRep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Уже есть аккаунт?"
        android:layout_gravity="end"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp" />
    <TextView
        android:id="@+id/pass_textRep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Уже есть аккаунт?"
        android:layout_gravity="end"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp" />
</LinearLayout>